{
  "manifest_version": 3,
  "name": "time rings",
  "description": "Extension clock",
  "version": "1.0",

  "icons": {
    "48": "icons/work.png",
    "96": "icons/coffee.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Time Rings",
    "default_icon": {
      "48": "icons/work.png",
      "96": "icons/coffee.png"
    }
  },

  "sidebar_action": {
    "default_panel": "sidebar/sidebar.html",
    "default_title": "Configuraci√≥n Time Rings",
    "default_icon": "icons/icon48.png"
  },

  "permissions": ["storage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' blob:; worker-src 'self' blob:; object-src 'self'; style-src 'self' 'unsafe-inline'"
  }
}
